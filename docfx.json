{
  "$schema": "https://raw.githubusercontent.com/dotnet/docfx/main/schemas/docfx.schema.json",
  "metadata": [
    {
      "src": [
        {
          "files": ["Editor/**/*.cs", "Runtime/**/*.cs"],
          "src": "../NonNonSheet/src/NonNonSheet.Unity/Packages/com.nonnon-works.nonnon-sheet"
        }
      ],
      "dest": "api",
      "disableGitFeatures": false,
      "disableDefaultFilter": false,
      "allowCompilationErrors": true
    }
  ],
  "build": {
    "content": [
      {
        "files": ["api/**.yml"]
      },
      {
        "files": ["**/*.{md,yml}"],
        "exclude": ["_site/**"]
      }
    ],
    "resource": [
      {
        "files": ["images/**"]
      }
    ],
    "output": "_site",
    "template": ["default", "modern"],
    "globalMetadata": {
      "_appName": "NonNonSheet",
      "_appTitle": "NonNonSheet",
      "_appLogoPath": "images/icon.svg",
      "_appFaviconPath": "images/icon.svg",
      "_enableSearch": true,
      "pdf": true,
      "pdfTocPage": true
    }
  }
}
